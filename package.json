    "concurrently": "^8.2.2",
    "esbuild": "^0.21.5",
    "esbuild-sass-plugin": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@mantine/core": "^7.10.1",
    "@mantine/hooks": "^7.10.1",
    "react": "^18.3.1",
